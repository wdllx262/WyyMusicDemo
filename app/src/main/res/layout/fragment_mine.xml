<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="always"
    android:scrollbars="none" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/fl_user_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="#1F1C1C" >
        <RelativeLayout
            android:id="@+id/f1_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@drawable/ic_head_default"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_65"
            android:text="wdllx262"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_85"
            android:text="Lv.8"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_guest_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_65"
            android:text="新客仅5元>"
            android:textColor="#928F8F"
            android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/f1_user_control"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_below="@+id/f1_info">

            <ImageView
                android:id="@+id/iv_user_music"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/icon_music"
                android:layout_marginTop="@dimen/dp_25"/>
            <TextView
                android:id="@+id/iv_user_music_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_user_music"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/dp_10"
                android:text="本地音乐"
                />
            <ImageView
                android:id="@+id/iv_user_download"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_toRightOf="@+id/iv_user_music"
                android:layout_marginStart="@dimen/dp_60"
                android:src="@drawable/icon_download"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/iv_user_download_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_user_download"
                android:layout_toRightOf="@+id/iv_user_music_text"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/dp_25"
                android:text="下载管理"
                />
            <ImageView
                android:id="@+id/iv_radio_station"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_toRightOf="@+id/iv_user_download"
                android:layout_marginStart="@dimen/dp_55"
                android:src="@drawable/icon_radio_station"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/iv_radio_station_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_user_download"
                android:layout_toRightOf="@+id/iv_user_download_text"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/dp_25"
                android:text="我的电台"
                />
            <ImageView
                android:id="@+id/iv_user_collection"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_toRightOf="@+id/iv_radio_station"
                android:layout_marginStart="@dimen/dp_55"
                android:src="@drawable/icon_collection"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/iv_user_collectionn_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_user_download"
                android:layout_toRightOf="@+id/iv_radio_station_text"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/dp_25"
                android:text="我的收藏"
                />
            <ImageView
                android:id="@+id/iv_follow_new_music"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_toRightOf="@+id/iv_user_collection"
                android:layout_marginStart="@dimen/dp_55"
                android:src="@drawable/icon_follow_new_music"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/iv_follow_new_music_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_user_download"
                android:layout_toRightOf="@+id/iv_user_collectionn_text"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/dp_25"
                android:text="关注新歌"
                />
        </RelativeLayout>>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_my_music_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#f5f5f5"
        android:layout_below="@id/fl_user_data">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_music_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/rl_my_music_gap">

        <ImageView
            android:id="@+id/iv_icon_my_music"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/shape_below"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon_my_music"
            android:text="我的音乐"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <include
        android:id="@+id/content_my_music"
        layout="@layout/content_my_music"
        android:layout_below="@id/rl_my_music_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_last_play_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#f5f5f5"
        android:layout_below="@+id/content_my_music"/>

    <RelativeLayout
        android:id="@+id/rl_last_play_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/rl_last_play_gap">

        <ImageView
            android:id="@+id/iv_icon_last_play"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/shape_below"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon_last_play"
            android:text="最近播放"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mine_last_play"
        android:layout_below="@id/rl_last_play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
    android:id="@+id/rl_gap"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_15"
    android:background="#f5f5f5"
    android:layout_below="@id/rv_mine_last_play"/>

    <RelativeLayout
        android:id="@+id/rl_create_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/rl_gap">

        <ImageView
            android:id="@+id/iv_icon_below"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/shape_below"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon_below"
            android:text="创建的歌单"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mine_playlist"
        android:layout_below="@id/rl_create_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_recommend_music_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#f5f5f5"
        android:layout_below="@id/rv_mine_playlist"/>

    <RelativeLayout
        android:id="@+id/rl_create_recommend_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/rl_recommend_music_gap">

        <ImageView
            android:id="@+id/iv_icon_recommend_music"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/shape_below"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon_recommend_music"
            android:text="推荐歌单"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mine_recommend_music"
        android:layout_below="@id/rl_create_recommend_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
</ScrollView>